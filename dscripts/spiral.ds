// Initial size

#width(480)
#height(360)

// Can define variables using hexadecimal
gray = 0x202020
black = 0x000000

for(i = 0; i < 360; i = i + 0.01) {
    draw()
    move()
    
    if(i > 180) {
        setColor(gray)
        log(1)
    } else {
        setColor(black)
    }

    rotate(i * PI / 180)
    scale(1.001)
}