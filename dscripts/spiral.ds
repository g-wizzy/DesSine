// Initial size

#width(200)
#height(120)

// Can define variables using hexadecimal
gray = 0x202020
black = 0x000000

for(i = 0; i < 360; i = i + 1) {
    draw()
    
    if(i > 180) {
        setColor(gray)
    }
    else {
        setColor(black)
    }

    rotate(i * PI / 180)
    scale(1.1)
    move()
}